<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:paddingTop="6dip" android:paddingBottom="6dip"
	android:paddingLeft="3dip">

	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_vertical"
		android:src="@drawable/icon" />

	<TextView android:id="@+id/name" android:textSize="40px"
		android:textColor="#0065BD" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:paddingLeft="12dip" android:paddingTop="6dip" />

</LinearLayout>