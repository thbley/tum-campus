<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingTop="6dip"
	android:paddingBottom="6dip" android:paddingLeft="3dip">

	<ImageView android:id="@+id/icon" android:layout_width="26.5dip"
		android:scaleType="fitXY" android:layout_height="26.5dip"
		android:layout_gravity="center_vertical" android:src="@android:color/transparent"
		android:layout_margin="6dip" />

	<TextView android:id="@+id/name" android:textSize="20sp"
		android:paddingTop="6dip" android:textColor="#0065BD"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:paddingLeft="6dip" />
</LinearLayout>