<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<ListView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/listView"
			android:scrollbars="vertical" android:layout_marginBottom="50px" />

		<SlidingDrawer android:layout_width="fill_parent"
			android:id="@+id/slidingDrawer1" android:layout_height="fill_parent"
			android:handle="@+id/handle" android:content="@+id/options">

			<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:text="Details"
				android:background="#FFDBE2E9" android:id="@+id/handle"
				android:height="50px" android:textColor="#FF2546A4" />

			<ScrollView android:id="@+id/options"
				android:layout_width="fill_parent" android:layout_height="fill_parent">

				<LinearLayout android:background="#DD000000"
					android:layout_width="fill_parent" android:orientation="vertical"
					android:layout_height="fill_parent">

					<ImageView android:id="@+id/image" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:src="@drawable/icon"
						android:layout_gravity="center" android:scaleType="fitXY"
						android:padding="10px" />

					<TextView android:layout_width="fill_parent"
						android:text="Bitte wÃ¤hlen Sie eine Veranstaltung aus."
						android:layout_height="wrap_content" android:id="@+id/description"
						android:autoLink="web" />

				</LinearLayout>
			</ScrollView>

		</SlidingDrawer>
	</FrameLayout>
</LinearLayout>