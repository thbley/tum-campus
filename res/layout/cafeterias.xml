<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:background="#0065BD" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_marginBottom="50px">

			<TextView android:layout_width="fill_parent" android:id="@+id/cafeteriaText"
				android:textColor="#FFFFFF" android:layout_height="wrap_content"
				android:text="Bitte wählen Sie eine Mensa aus." />

			<ListView android:layout_height="fill_parent"
				android:background="#FFFFFF" android:layout_width="fill_parent"
				android:id="@+id/listView3" android:layout_weight="51"
				android:scrollbars="vertical" android:layout_marginBottom="10px"
				android:padding="6px" />

			<ListView android:layout_width="fill_parent"
				android:background="#FFFFFF" android:layout_height="fill_parent"
				android:id="@+id/listView2" android:layout_weight="49"
				android:scrollbars="vertical" android:padding="6px" />

		</LinearLayout>

		<SlidingDrawer android:layout_width="fill_parent"
			android:id="@+id/slider" android:layout_height="fill_parent"
			android:handle="@+id/handle" android:content="@+id/slide">

			<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:text="Datum auswählen"
				android:background="#0065BD" android:id="@+id/handle"
				android:height="50px" android:textColor="#FFFFFF" />

			<LinearLayout android:id="@+id/slide"
				android:background="#F1FFFFFF" android:layout_width="fill_parent"
				android:orientation="vertical" android:layout_height="fill_parent">

				<ListView android:layout_height="fill_parent" android:id="@+id/listView"
					android:layout_width="fill_parent" android:scrollbars="vertical" />

			</LinearLayout>
		</SlidingDrawer>
	</FrameLayout>
</LinearLayout>