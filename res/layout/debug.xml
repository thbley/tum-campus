<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:text="sqlite: cafeterias" android:id="@+id/debugCafeterias"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="sqlite: cafeterias_menus" android:id="@+id/debugCafeteriasMenus"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:text="sqlite: feeds" android:id="@+id/debugFeeds"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="sqlite: feeds_items" android:id="@+id/debugFeedsItems"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="sqlite: links" android:id="@+id/debugLinks"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<TextView android:layout_width="fill_parent"
		android:scrollbars="vertical" android:layout_height="wrap_content"
		android:id="@+id/debug" />

</LinearLayout>